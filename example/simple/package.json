{
  "name": "aws-nodejs-typescript",
  "version": "1.0.0",
  "description": "Serverless webpack example using Typescript",
  "main": "handler.js",
  "scripts": {
    "start:aws": "serverless offline start",
    "start:azure": "npm run build:azure && func host start",
    "start:gcp": "npm run build:gcp && ./node_modules/.bin/functions deploy hello --entry-point=hello --trigger-http --source=./hello",
    "build:azure": "serverless webpack && cp .webpack/service/handler.js hello/",
    "build:gcp": "serverless webpack && cp .webpack/service/handler.js hello/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@google-cloud/functions-emulator": "^1.0.0-beta.5",
    "@types/aws-lambda": "^0.0.33",
    "@types/node": "^8.0.57",
    "serverless-webpack": "^4.0.0",
    "ts-loader": "^2.3.7",
    "typescript": "^2.5.2",
    "webpack": "^3.6.0"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT",
  "dependencies": {
    "hapi": "16.6.3"
  }
}
